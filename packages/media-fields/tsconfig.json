{
	"$schema": "https://json.schemastore.org/tsconfig.json",
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"types": [ "gutenberg-env", "gutenberg-test-env", "jest" ]
	},
	"references": [
		{ "path": "../components" },
		{ "path": "../core-data" },
		{ "path": "../data" },
		{ "path": "../dataviews" },
		{ "path": "../date" },
		{ "path": "../element" },
		{ "path": "../i18n" },
		{ "path": "../icons" },
		{ "path": "../primitives" },
		{ "path": "../url" }
	],
	"files": [ "global.d.ts" ],
	"exclude": [
		"src/**/*.android.js",
		"src/**/*.ios.js",
		"src/**/*.native.js",
		"src/**/react-native-*",
		"src/**/stories/**/*.js", // only exclude js files, tsx files should be checked
		"src/**/test/**/*.js" // only exclude js files, ts{x} files should be checked
	]
}
